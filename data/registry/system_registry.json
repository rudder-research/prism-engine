{
    "version": "2.0.0",
    "description": "PRISM System Registry - Global configuration",
    "systems": {
        "finance": {
            "enabled": true,
            "description": "Financial market and economic data",
            "default_frequency": "daily",
            "registries": [
                "market_registry.json",
                "economic_registry.json"
            ]
        },
        "climate": {
            "enabled": false,
            "description": "Climate and environmental data",
            "default_frequency": "monthly",
            "registries": []
        }
    },
    "data_sources": {
        "yahoo": {
            "name": "Yahoo Finance",
            "type": "market",
            "enabled": true,
            "rate_limit_per_minute": 2000,
            "requires_api_key": false
        },
        "stooq": {
            "name": "Stooq",
            "type": "market",
            "enabled": true,
            "rate_limit_per_minute": 100,
            "requires_api_key": false
        },
        "fred": {
            "name": "Federal Reserve Economic Data",
            "type": "economic",
            "enabled": true,
            "rate_limit_per_minute": 120,
            "requires_api_key": true,
            "api_key_env_var": "FRED_API_KEY"
        }
    },
    "paths": {
        "database": {
            "default": "data/sql/engine.db",
            "dropbox": "~/Dropbox/prism-data/engine.db",
            "colab": "/content/drive/MyDrive/prism-data/engine.db"
        },
        "active_db_path": "default",
        "panels": "data/panels/",
        "registries": "data/registry/"
    },
    "defaults": {
        "start_date": "2000-01-01",
        "date_format": "YYYY-MM-DD",
        "timezone": "UTC"
    }
}
